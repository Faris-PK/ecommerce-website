<%-include('../layouts/header.ejs')%>
<%-include('../layouts/navbar.ejs')%>

<main class="main">

    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('assets/images/backgrounds/login-bg3.jpg')">
        <div class="container">
            <div class="form-box">
                <div class="form-tab">
                    <ul class="nav nav-pills nav-fill" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="login-tab-2" data-toggle="tab" href="#login-2" role="tab" aria-controls="login-2" aria-selected="true">Login</a>
                        </li>
                    </ul>
                    <br>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="login-2" role="tabpanel" aria-labelledby="login-tab-2">
                            <form action="/loginsubmit" method="POST" onsubmit="return validateForm()">
                                <div class="form-group">
                                    
                                    <label for="login-email-2">Email Address *</label>
                                    <input type="text" class="form-control" id="login-email-2" name="email" >
                                </div><!-- End .form-group -->
                                <br>
                                <div class="form-group">
                                    <label for="login-password-2">Password *</label>
                                    <input type="password" class="form-control" id="login-password-2" name="password">
                                </div><!-- End .form-group -->
                                <br>
                                <% if (locals.message) { %>
                                    <!-- Display the verification message -->
                                    <p style="color: red;"><%= message %></p>
                                <% } %>
                                <div class="form-footer">
                                    <button type="submit" class="btn btn-outline-primary-2">
                    
                                        <span>LOG IN</span>
                                        <i class="icon-long-arrow-right"></i>
                                    </button>
                                    
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="login-remember-2">
                                        <!-- <a href="#" class="forgot-link">Forgot Your Password?</a><hr> -->
                                    </div><!-- End .custom-checkbox -->
                                    <div class="form-footer">
                                        <p>Don't have an account? <a href="/register">Register</a></p>
                                    
                                    </div><!-- End .form-footer -->      
                                    
                                </div><!-- End .form-footer -->
                            </form>
                        </div><!-- .End .tab-pane -->
                    </div><!-- End .tab-content -->
                </div><!-- End .form-tab -->
            </div><!-- End .form-box -->
        </div><!-- End .container -->
    </div><!-- End .login-page section-bg -->
</main><!-- End .main -->

<style>
    /* Defining the size of the sweet alert */
    .larger-toast {
        width: 400px;
        font-size: 14px;
    }
</style>

<%-include('../layouts/footbar.ejs')%>

<%-include('../layouts/footer.ejs')%>