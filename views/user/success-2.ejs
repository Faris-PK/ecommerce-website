<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <script>
        Swal.fire({
            title: '<%= title %>',
            text: '<%= message %>',
            icon: 'success',
            confirmButtonText: 'OK'
        }).then(() => {
            window.location.href = '/login?success=true';
        });
    </script>
</body>
</html>
